<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beje">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nova_estufa_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#C8E6C9" />

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/voltar"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/bg_cartao_topo_redondo"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova estufa"
            android:fontFamily="@font/alexandria_bold"
            android:textColor="@color/verde_escuro"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/labelSSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nome da rede (SSID)"
            android:textColor="@color/verde_escuro"
            android:fontFamily="@font/alexandria_bold"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"/>

        <EditText
            android:id="@+id/etSSID"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_campo_input"
            android:paddingHorizontal="12dp"

            android:fontFamily="@font/alexandria"
            android:textSize="19sp"
            android:textColor="@color/verde_medio"

            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/labelSSID"/>

        <TextView
            android:id="@+id/labelSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Senha da rede"
            android:textColor="@color/verde_escuro"
            android:fontFamily="@font/alexandria_bold"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSSID"/>

        <EditText
            android:id="@+id/etSenha"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_campo_input"
            android:paddingHorizontal="12dp"

            android:fontFamily="@font/alexandria"
            android:textSize="19sp"
            android:textColor="@color/verde_medio"

            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/labelSenha"/>

        <TextView
            android:id="@+id/labelNomeEstufa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nome da Estufa"
            android:textColor="@color/verde_escuro"
            android:fontFamily="@font/alexandria_bold"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSenha"/>

        <EditText
            android:id="@+id/etNomeEstufa"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_campo_input"
            android:paddingHorizontal="12dp"

            android:fontFamily="@font/alexandria"
            android:textSize="19sp"
            android:textColor="@color/verde_medio"

            android:inputType="textCapWords"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/labelNomeEstufa"/>

        <TextView
            android:id="@+id/labelPlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Planta cultivada"
            android:textColor="@color/verde_escuro"
            android:fontFamily="@font/alexandria_bold"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etNomeEstufa"/>

        <Spinner
            android:id="@+id/spinnerPlanta"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_campo_input"
            android:padding="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toBottomOf="@id/labelPlanta"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCriarEstufa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"

            android:background="@drawable/bg_botao_verde"
            app:backgroundTint="@null"

            android:text="Criar nova estufa"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/alexandria_bold"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/spinnerPlanta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>